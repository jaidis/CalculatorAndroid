<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="-10dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/textViewResultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:text="0"
            android:textAlignment="textEnd"
            android:textSize="48sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:measureWithLargestChild="false"
            android:shrinkColumns="0"
            android:stretchColumns="0,1,2,3">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/button_memory_reset"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:height="0dp"
                    android:background="@drawable/botones_especiales"
                    android:onClick="memoriaResetear"
                    android:text="MC"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_memory_set"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:height="0dp"
                    android:background="@drawable/botones_especiales"
                    android:onClick="memoriaValor"
                    android:text="MR"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_memory_add"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:height="0dp"
                    android:background="@drawable/botones_especiales"
                    android:onClick="memoriaAsignarValor"
                    android:text="M+"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_reset"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:height="0dp"
                    android:background="@drawable/botones_especiales"
                    android:onClick="limpiar"
                    android:text="C"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/button_7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:height="0dp"
                    android:background="@drawable/botones_numeros"
                    android:onClick="numero"
                    android:text="7"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:height="0dp"
                    android:background="@drawable/botones_numeros"
                    android:onClick="numero"
                    android:text="8"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:height="0dp"
                    android:background="@drawable/botones_numeros"
                    android:onClick="numero"
                    android:text="9"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_dividir"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:height="0dp"
                    android:background="@color/colorPrimary"
                    android:onClick="dividiendo"
                    android:text="/"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/button_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:height="0dp"
                    android:background="@drawable/botones_numeros"
                    android:onClick="numero"
                    android:text="4"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:height="0dp"
                    android:background="@drawable/botones_numeros"
                    android:onClick="numero"
                    android:text="5"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:height="0dp"
                    android:background="@drawable/botones_numeros"
                    android:onClick="numero"
                    android:text="6"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_multiplicar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:height="0dp"
                    android:background="@color/colorPrimary"
                    android:onClick="multiplicando"
                    android:text="*"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/button_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:height="0dp"
                    android:background="@drawable/botones_numeros"
                    android:onClick="numero"
                    android:text="1"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:height="0dp"
                    android:background="@drawable/botones_numeros"
                    android:onClick="numero"
                    android:text="2"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:height="0dp"
                    android:background="@drawable/botones_numeros"
                    android:onClick="numero"
                    android:text="3"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_restar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:height="0dp"
                    android:background="@color/colorPrimary"
                    android:onClick="restando"
                    android:text="-"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/button_0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:height="0dp"
                    android:background="@drawable/botones_numeros"
                    android:onClick="numero"
                    android:text="0"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp" />

                <!--                <Button
                                    android:id="@+id/button_result"
                                    android:layout_width="25dp"
                                    android:layout_height="match_parent"
                                    android:layout_span="2"
                                    android:height="0dp"
                                    android:background="@color/colorPrimary"
                                    android:onClick="resultado"
                                    android:text="="
                                    android:textColor="@android:color/background_light"
                                    android:textSize="24sp" />-->

                <Button
                    android:id="@+id/button_coma"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:height="0dp"
                    android:background="@drawable/botones_numeros"
                    android:onClick="numero"
                    android:text="."
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_result"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:height="0dp"
                    android:background="@color/colorPrimary"
                    android:onClick="resultado"
                    android:text="="
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp" />


                <Button
                    android:id="@+id/button_sumar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:height="0dp"
                    android:background="@color/colorPrimary"
                    android:onClick="sumando"
                    android:text="+"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp" />
            </TableRow>
        </TableLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>