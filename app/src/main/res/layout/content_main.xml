<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="6dp">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/radioButton_BIN"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onConvesion"
                        android:text="BIN"
                        android:textSize="36sp" />

                    <RadioButton
                        android:id="@+id/radioButton_OCT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="onConvesion"
                        android:text="OCT"
                        android:textSize="36sp" />

                    <RadioButton
                        android:id="@+id/radioButton_DEC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="onConvesion"
                        android:text="DEC"
                        android:textSize="36sp" />

                    <RadioButton
                        android:id="@+id/radioButton_HEX"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="onConvesion"
                        android:text="HEX"
                        android:textSize="36sp" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_BIN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/textView_OCT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/textView_DEC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/textView_HEX"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="36sp" />
            </LinearLayout>

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:shrinkColumns="0"
            android:stretchColumns="0,1,2,3">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height = "0dp"
                android:layout_weight = "1">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/button_reset"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_span="2"
                    android:height="0dp"
                    android:background="@drawable/botones_especiales"
                    android:onClick="limpiarConversion"
                    android:text="C"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height = "0dp"
                android:layout_weight = "1">

                <Button
                    android:id="@+id/button_00"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:height="0dp"
                    android:background="@drawable/botones_numeros"
                    android:onClick="numeroConversion"
                    android:text="0"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_01"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:height="0dp"
                    android:background="@drawable/botones_numeros"
                    android:onClick="numeroConversion"
                    android:text="1"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_02"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:height="0dp"
                    android:background="@drawable/botones_numeros"
                    android:onClick="numeroConversion"
                    android:text="2"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_03"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:height="0dp"
                    android:background="@drawable/botones_numeros"
                    android:onClick="numeroConversion"
                    android:text="3"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height = "0dp"
                android:layout_weight = "1">

                <Button
                    android:id="@+id/button_04"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:height="0dp"
                    android:background="@drawable/botones_numeros"
                    android:onClick="numeroConversion"
                    android:text="4"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_05"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:height="0dp"
                    android:background="@drawable/botones_numeros"
                    android:onClick="numeroConversion"
                    android:text="5"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_06"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:height="0dp"
                    android:background="@drawable/botones_numeros"
                    android:onClick="numeroConversion"
                    android:text="6"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_07"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:height="0dp"
                    android:background="@drawable/botones_numeros"
                    android:onClick="numeroConversion"
                    android:text="7"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height = "0dp"
                android:layout_weight = "1">

                <Button
                    android:id="@+id/button_08"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:height="0dp"
                    android:background="@drawable/botones_numeros"
                    android:onClick="numeroConversion"
                    android:text="8"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_09"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:height="0dp"
                    android:background="@drawable/botones_numeros"
                    android:onClick="numeroConversion"
                    android:text="9"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_A"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:height="0dp"
                    android:background="@drawable/botones_numeros"
                    android:onClick="numeroConversion"
                    android:text="A"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_B"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:height="0dp"
                    android:background="@drawable/botones_numeros"
                    android:onClick="numeroConversion"
                    android:text="B"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height = "0dp"
                android:layout_weight = "1">

                <Button
                    android:id="@+id/button_C"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:height="0dp"
                    android:background="@drawable/botones_numeros"
                    android:onClick="numeroConversion"
                    android:text="C"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_D"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:height="0dp"
                    android:background="@drawable/botones_numeros"
                    android:onClick="numeroConversion"
                    android:text="D"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_E"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:height="0dp"
                    android:background="@drawable/botones_numeros"
                    android:onClick="numeroConversion"
                    android:text="E"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_F"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:height="0dp"
                    android:background="@drawable/botones_numeros"
                    android:onClick="numeroConversion"
                    android:text="F"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>